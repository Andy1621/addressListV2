/* pages/addressList/addressList.wxss */

.asklog{
    font-family: Times, TimesNR, '微软雅黑';
    font-size: 20px;
    margin-top: 200px;
    text-align: center;
}

.navbar {
flex: none;
display:flex;
background: #fff;
border-bottom: 2rpx solid #ddd;
text-align: center;
line-height: 80rpx;
}


.navbar .item {
position: relative;
flex: auto;
text-align: center;
line-height: 80rpx;
color: #b2bec0;
}


.navbar .item.active {
color: #000000;
}


.navbar .item.active:after {
content: "";
display: block;
position: absolute;
bottom: 0;
left: 0;
right: 0;
height: 4rpx;
background: #e60012;
}

.index {
  background-color: #fbf9fe;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  flex: 1;
  min-height: 100%;
  font-size: 32rpx;
}

.head {
  padding: 80rpx;
  line-height: 1;
}

.body {
  overflow: hidden;
}

.title {
  font-size: 52rpx;
}

.desc {
  margin-top: 10rpx;
  color: #888; 
  font-size: 28rpx;
}

.widgets__item {
  background-color: #fff;
  overflow: hidden;
  border-radius: 4rpx;
  border-bottom: solid 3rpx #F8F8F8;
  /* cursor: pointer; */
}

.widgets__info {
  display: flex;
  padding: 40rpx;
  flex-direction: row;
}

.widgets__info_show {
}

.widgets__info_show .widgets__info-img {
  transform: rotate(-90deg);
}

.widgets__info-name {
  flex: 1;
}

.widgets__info-img {
  width: 32rpx;
  height: 32rpx;
  transition: transform 0.4s;
  transform: rotate(90deg);
}

.widgets__list {
  display: none;
}

.widgets__list_show {
  display: block;
}

.widget {
  position: relative;
  text-align: left;
  border-bottom: solid 3rpx #F8F8F8;
}

.widget__arrow {
  position: absolute;
  top: 28rpx;
  right: 44rpx;
  width: 32rpx;
  height: 32rpx;
}

.widget__line {
  content: " ";
  position: absolute;
  top: 0;
  right: 0;
  height: 2rpx;
  background-color: #f0f0f0;
}

.widget__line_first {
  left: 0;
  right: 0;
  background-color: #d8d8d8;
}


.button-hover {
  background-color: red;
}
/** 添加自定义button点击态样式类**/
.other-button-hover {
  background-color: black;
}

.top {
  position:fixed;
  top: 100;
  width: 100%;
  left: 0;
}

.list {
    padding-bottom: 40px;
    position:fixed;
    top: 180rpx;
    width: 100%;
    left: 0;
}


.weui-media-box__title{
    display: flex;
    flex-direction: row;
}

.weui-media-box_appmsg{
    display:-webkit-box;
    display:-webkit-flex;
    display:flex;
    -webkit-box-align:center;
    -webkit-align-items:center;
    align-items: center
}

.weui-media-box_appmsg_mes{
    display:-webkit-box;
    display:flex;
    -webkit-box-align:center;
    flex-direction: column;
    margin-top: 10px;
    align-items: left;
}

.weui-media-box{
    border-top:1rpx solid #e5e5e5;
    background-color: #fff;
}

.weui-media-box:before{
    content:" ";
    position:absolute;
    left:0;
    top:0;
    right:0;
    height:1px;
    color:#e5e5e5;
}

.test{
  padding: 15px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.weui-media-box__thumb{
    border-radius: 20%;
}

.weui-media-box__user{
    border-radius: 50%;
}