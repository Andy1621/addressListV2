/*pages/dealApplication/dealApplication.wxss*/

page{
    background-color: #f8f8f8;
}

.justify-content-center{
    flex-direction:row;
    justify-content: center;
}

.flex-wrp{
    height: 20px;
    display:flex;
}

.weui-panel__main{
    border:solid 1rpx #9F9F9F;
    background-color:white;
    border-radius: 10rpx;
    position:relative;
    width: 95%;
    margin-left:2.5%; 
}

.weui-media-box{
    padding:30rpx;
    position:relative;
}

.weui-media-box_appmsg{
    display:-webkit-box;
    display:-webkit-flex;
    display:flex;
    -webkit-box-align:center;
    -webkit-align-items:center;
    align-items:center;
}

.weui-media-box__hd_in-appmsg{
    margin-right:40rpx;
    width:140rpx;
    height:140rpx;
    line-height:140rpx;
    text-align:center;
}

.weui-media-box__thumb{
    width:100%;
    height:100%;
    border-radius: 50%;
    vertical-align:top;
}

.weui-media-box__bd_in-appmsg{
    -webkit-box-flex:1;
    -webkit-flex:1;
    flex:1;
    min-width:0;
}

.weui-media-box__title{
    font-weight:bold;
    font-size:42rpx;
    width:auto;
    overflow:hidden;
    text-overflow:ellipsis;
    word-wrap:break-word;
    white-space:nowrap;
    word-break:break-all;
}

.weui-media-box__desc{
    color:#999;
    font-size:26rpx;
    line-height:2;
    overflow:hidden;
    text-overflow:ellipsis;
    word-break:break-all;
    display:-webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:1;
}

.userinfo-nickname {
    font-size: 36rpx;
    color:blue;
    background-color: white; 
}

.apply-reason{
    height: 100%;
    width:95%;
    margin-left: 2.5%;
    margin-bottom: 100rpx;
    border:solid 1rpx #9F9F9F;
    border-radius:10rpx;
    background-color:white;
    position:relative;
}

.apply-reason-text{
    margin: 20rpx;
    font-size: 30rpx;
}

.about-addresslist{
    height: 100%;
    width:95%;
    margin-left: 2.5%;
    border:solid 1rpx #9F9F9F;
    border-radius:10rpx;
    background-color:white;
    position:relative;
}

.about-addresslist-text{
    margin: 20rpx;
    font-size: 30rpx;
}

.btn-area{
    border-top: solid 1rpx #9F9F9F;
    /*border-bottom: solid 3px #9F9F9F;*/
    margin-top: 30rpx;
    padding-bottom: 30rpx;
    display: flex;
    position: fixed;
    bottom: 0rpx;
    width: 100%;
    background-color: #f8f8f8;
}

.weui-btn{
    width: 40%;
}