/* pages/myInfo/myInfo.wxss */

.top {
    position: fixed;
    top: 20rpx;
    left: 30rpx
}

.middle__info {
    position:fixed;
    top: 260rpx;
    left: 0;
    width: 100%;
    overflow:hidden;
}

.weui-panel__main{
    border: dotted 5rpx lightblue;
    border-radius: 3%;
    width: 690rpx;
    background-color:white;
    position:relative;
}

.weui-panel__middle{
    border-bottom: solid 3rpx #F8F8F8;
    background-color: white;
    position:relative;
}

.weui-media-box{
    padding:30rpx;
    position:relative;
}

.weui-media-box_appmsg{
    display:-webkit-box;
    display:-webkit-flex;
    display:flex;
    -webkit-box-align:center;
    -webkit-align-items:center;
    align-items:center;
}

.weui-media-box__hd_in-appmsg{
    margin-right:40rpx;
    width:140rpx;
    height:140rpx;
    line-height:140rpx;
    text-align:center;
}

.weui-media-box__thumb{
    width:100%;
    height:100%;
    border-radius: 50%;
    vertical-align:top;
}

.weui-media-box__bd_in-appmsg{
    -webkit-box-flex:1;
    -webkit-flex:1;
    flex:1;
    min-width:0;
}

.weui-media-box__title{
    font-weight:bold;
    font-size:42rpx;
    width:auto;
    overflow:hidden;
    text-overflow:ellipsis;
    word-wrap:normal;
    word-wrap:break-word;
    white-space:nowrap;
    word-break:break-all;
}

.weui-media-box__desc{
    color:#999;
    font-size:26rpx;
    line-height:2;
    overflow:hidden;
    text-overflow:ellipsis;
    word-break:break-all;
    display:-webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:1;
}

.weui-cell__bd_my{
    font-size:32rpx;
    margin-right: 100rpx;
}

.weui-cell__ft_my{
    text-align:right;
    color:#999;
    font-size:28rpx;
    word-break:break-all;
    -webkit-box-flex:1;
    -webkit-flex:1;
    flex:1;
}

.weui-cell{
    padding:18rpx 30rpx;
    position:relative;
    display:-webkit-box;
    display:-webkit-flex;
    display:flex;
    -webkit-box-align:center;
    -webkit-align-items:center;
    align-items:center;
}

.weui-cell_access{
    color:inherit;
}

.weui-panel__hd_my{
    padding:10rpx 20rpx 15rpx;
    color:#999;
    font-size:26rpx;
    position:relative;
}

.userinfo-nickname {
    font-size: 36rpx;
    color:blue;
    background-color: white; 
}

.bottom{
    position:fixed;
    bottom: 0;
}

.mybtn{
    width: 750rpx;
    color: royalblue;
    border: solid 3rpx skyblue;
}

.mybtn::after{
    border:none;
}