/*Reply*/

.input_null {
  color: #c9c9c9;
}

.release {
  display: flex;
  align-items: flex-end; /*底部对齐*/
  justify-content: space-between; /*两端对齐*/
  box-sizing: border-box;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 18rpx 10rpx 18rpx 30rpx;
  background-color: #f7f8f7;
  font-size: 28rpx;
  z-index: 999;
}

.release .text {
  width: 100%;
  min-height: 34rpx;
  max-height: 102rpx; /*最多显示三行*/
  border-width: 15rpx 20rpx; /*使用padding与预期留白不一致，故使用border*/
  border-style: solid;
  border-color: #fff;
  line-height: 34rpx;
  font-size: 28rpx;
  background-color: #fff;
  border-radius: 4rpx;
  text-align: left;
}

.release .msgTo {
  width: 116rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  color: #1296db;
  font-size: 30rpx;
  margin-right: 20rpx;
}

.release .submit {
  width: 116rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  color: #1296db;
  font-size: 30rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
  margin-bottom: 10rpx;
  border-left: 1rpx, solid, #222;
}

.release .divide {
  color: #1296db;
  background-color: #1296db;
  height: 60rpx;
  width: 4rpx;
  margin-bottom: 10rpx;
}

.msgReply {
  background-color: #f6f6f6;
  border-bottom: solid 2rpx #fff;
  width: 97%;
  display: flex;
  flex-direction: row;
  text-align: left;
  padding-left: 2%;
  padding-bottom: 15rpx;
  padding-top: 10rpx;
  word-wrap: break-word;
  word-break: break-all;
}

.mesreplytime {
  color: #9b9b9b;
  font-size: 24rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}

.replyimage {
  margin-top: 10rpx;
  margin-right: 15rpx;
  min-width: 60rpx;
  max-width: 60rpx;
  min-height: 60rpx;
  max-height: 60rpx;
  line-height: 60rpx;
  text-align: left;
  border-radius: 50%;
}

.replyName {
  /*border-right: solid 3rpx #4f4f4f;*/
  font-size: 26rpx;
  max-height: 40rpx;
  margin-left: 10rpx;
  padding-right: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.replytext {
  font-size: 26rpx;
  color: #1f1f1f;
  margin-left: 10rpx;
  margin-top: 10rpx;
}

